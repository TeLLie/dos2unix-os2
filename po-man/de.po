#: dos2unix.pod:801
#, no-wrap
msgid ""
"    dos2unix -n a.txt e.txt\n"
"\n"
msgstr ""
"    dos2unix -n a.txt e.txt\n"
"\n"

#. type: textblock
#: dos2unix.pod:803
msgid "Convert a.txt and write to e.txt, keep date stamp of e.txt same as a.txt:"
